<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/small"
    android:layoutDirection="ltr"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical">



        <TextView

            android:id="@+id/txttitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="شماره همراه خود را  وارد کنید"
            android:textColor="#3c3c3c"
            android:textSize="16dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_16sdp"
            android:background="@drawable/back_simple_corner_6dp">


            <EditText
                android:id="@+id/edtPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_4sdp"
                android:background="@android:color/transparent"
                android:hint="تلفن همراه"

                android:inputType="number"
                android:maxLength="11"
                android:padding="@dimen/_8sdp"
                android:singleLine="true"
                android:textColor="#3c3c3c"
                android:textColorHint="#334194" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/small">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnNo"
                android:layout_width="@dimen/buttonSubmitWidth2"
                android:layout_height="@dimen/buttonSubmitHeight"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/small"
                android:layout_marginRight="@dimen/mini"
                android:background="@drawable/button_background"
                android:gravity="center"
                android:text="انصراف"
                android:textColor="#EBE9E9"
                android:textSize="12sp"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnYes"
                android:layout_width="@dimen/buttonSubmitWidth2"
                android:layout_height="@dimen/buttonSubmitHeight"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/small"
                android:layout_marginRight="@dimen/mini"
                android:background="@drawable/button_background"
                android:gravity="center"
                android:text="تایید"
                android:textColor="#EBE9E9"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>