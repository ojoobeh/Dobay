<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:layout_margin="4dp"
    android:background="?attr/selectableItemBackground"
    android:layoutDirection="rtl"
    android:orientation="horizontal"
    app:cardCornerRadius="8dp"
    app:cardElevation="@dimen/small">


    <RelativeLayout
        android:id="@+id/rootColor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgShow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:padding="@dimen/mini"
            android:scaleType="fitXY"
            tools:src="@mipmap/five" />



        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/mediumfont"
            android:textSize="12sp"
            tools:text="پکیج 20 تایی" />


        <TextView
            android:id="@+id/txtTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/mediumfont"
            android:textSize="@dimen/standard_font"
            tools:text="20,000 تومان" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>