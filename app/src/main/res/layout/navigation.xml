<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.navigation.NavigationView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_view"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="right"

    android:layout_marginTop="?attr/actionBarSize"
    android:background="@color/navigationColor"
    android:layoutDirection="rtl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/navigationColor"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:background="@mipmap/yellowvector">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="#f55"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="@dimen/_64sdp"
                android:layout_height="@dimen/_64sdp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:src="@mipmap/icon" />

            <ir.bestdroid.dobay.customTextView.Text_IRANSansWeb_Bold
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                android:text="کاربر مهمان"
                android:textColor="#3F51B5"
                android:textSize="@dimen/_12sdp" />


            <ir.bestdroid.dobay.customTextView.Text_IRANSansWeb_Bold
                android:id="@+id/txtCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_22sdp"
                android:text="تعداد کد های باقیمانده :"
                android:textColor="#3F51B5"
                android:textSize="12sp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/navigationColor"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rootSetting"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_56sdp"
                android:background="?attr/selectableItemBackground"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image00"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:tint="@color/navigationIconColor"
                    app:srcCompat="@drawable/ic_settings" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:layout_toLeftOf="@id/image00"
                    android:text="تنظیمات"
                    android:textColor="@color/navigationTextColor"
                    android:textSize="@dimen/_14sdp" />

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#fff" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/navigationColor"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/favSetting"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_56sdp"
                android:background="?attr/selectableItemBackground"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/favoriteimg"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:tint="@color/navigationIconColor"
                    app:srcCompat="@drawable/favo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:layout_toLeftOf="@id/favoriteimg"
                    android:text="علاقمندی ها"
                    android:textColor="@color/navigationTextColor"
                    android:textSize="@dimen/_14sdp" />

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#fff" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/navigationColor"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_56sdp"
                android:background="?attr/selectableItemBackground"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgLogout"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:tint="@color/navigationIconColor"
                    app:srcCompat="@drawable/ic_exit_to_app_black_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:layout_toLeftOf="@id/imgLogout"
                    android:text="خروج از حساب کاربری"
                    android:textColor="@color/navigationTextColor"
                    android:textSize="@dimen/_14sdp" />


            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#fff" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/navigationColor"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/shopping"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_56sdp"
                android:background="?attr/selectableItemBackground"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgshopping"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:tint="@color/navigationIconColor"
                    app:srcCompat="@drawable/ic_shopping_cart" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:layout_toLeftOf="@id/imgshopping"
                    android:text="فروشگاه"
                    android:textColor="@color/navigationTextColor"
                    android:textSize="@dimen/_14sdp" />


            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#fff" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.navigation.NavigationView>