<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_16sdp"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="8dp"
            app:cardElevation="@dimen/mini"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingBottom="@dimen/large">

                <ImageView
                    android:id="@+id/imgBack"
                    android:layout_width="@dimen/large"
                    android:layout_height="@dimen/large"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="@dimen/_16sdp"
                    app:srcCompat="@drawable/ic_arrow_left" />




                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_64sdp"
                    android:gravity="center"
                    android:text="تاید شماره"
                    android:textColor="#3c3c3c"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/txtContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtTitle"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="@dimen/small"
                    android:gravity="center" />


                <com.goodiebag.pinview.Pinview
                    android:id="@+id/pinview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtContent"
                    android:layoutDirection="ltr"
                    android:textDirection="ltr"
                    app:cursorVisible="false"
                    app:forceKeyboard="true"
                    app:inputType="number"
                    app:password="false"
                    app:pinLength="5"
                    app:pinWidth="@dimen/_40sdp"
                    app:textSize="10sp" />


                <Button
                    android:id="@+id/button02"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pinview"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"

                    android:layout_marginTop="@dimen/large"
                    android:background="@drawable/back_all_button"
                    android:paddingLeft="@dimen/small"
                    android:paddingRight="@dimen/small"
                    android:text="تایید"
                    android:textColor="#fff"
                    android:textStyle="bold" />


                <ir.bestdroid.dobay.customTextView.Text_IRANSansWeb_Medium
                    android:id="@+id/btnReSendCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/button02"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:text="ارسال مجدد کد"
                    android:textColor="@color/colorNameCar" />





                <ProgressBar
                    android:id="@+id/progResend"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_below="@id/button02"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:layout_toLeftOf="@id/btnReSendCode"
                    android:visibility="gone" />


            </RelativeLayout>


        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/back_circle_solidwhite"
        android:padding="@dimen/mini">


        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/ic_sv_logo_round" />


    </RelativeLayout>

</RelativeLayout>





