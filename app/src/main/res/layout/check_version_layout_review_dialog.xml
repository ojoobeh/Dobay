<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardElevation="8dp"
    app:cardCornerRadius="4dp"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView

            android:id="@+id/txttitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="نسخه جدید برنامه موجود است آیا بروز رسانی میکنید ؟"
            android:textColor="#3c3c3c"
            android:textSize="16dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp">

            <Button
                android:id="@+id/btnDownloadLater"
                android:layout_width="@dimen/buttonSubmitWidth2"
                android:layout_height="@dimen/buttonSubmitHeight"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/check_version_button5"
                android:gravity="center"
                android:text="بعدا"
                android:textColor="#818181"
                android:textSize="12dp"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnDownloadNow"
                android:layout_width="@dimen/buttonSubmitWidth2"
                android:layout_height="@dimen/buttonSubmitHeight"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/check_version_button5"
                android:gravity="center"
                android:text="دانلود"
                android:textColor="#3c3c3c"
                android:textSize="12dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>